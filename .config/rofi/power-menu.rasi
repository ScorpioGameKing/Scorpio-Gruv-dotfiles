/* Power menu */

@theme "~/.config/rofi/theme.rasi"

configuration {
  font:                     "JetBrainsMono Nerd Font 8";
  hover-select:             true;
  me-select-entry:          "MousePrimary";
  me-accept-entry:          "!MousePrimary";
}

/* Window */

window {
  location:                 northeast;
  anchor:                   north;
  x-offset:                 -2px;
  y-offset:                 2px;
  width:                    150px;
  border:                   2px;
  border-radius:            5px;
  border-color:             @blue;
  background-color:         @blue;
  children:                 [ mainbox ];
}

mainbox {
  spacing:                  0;
  background-color:         @blue;
  text-color:               @blue;
  children:                 [ listview ];
}

textbox-custom {
  font:                     "JetBrainsMono Nerd Font Bold 2";
  horizontal-align:         0.5;
  padding:                  0;
  expand:                   false;
  background-color:         @select-bg;
  text-color:               @select-fg;
  expand:                   false;
  // content:                  "ï€‘  Power";
}

/* List */

listview {
  border:                   0 0 0 0;
  border-radius:            5px;
  border-color:             @blue;
  lines:                    6;
  padding:                  6px;
  background-color:         @main-bg;
}

element {
  padding:                  6px;
  cursor:                   pointer;
  background-color:         inherit;
  text-color:               @main-fg;
}
element selected.normal {
  border-radius:            6px;
  background-color:         @blue;
  text-color:               @select-fg;
}
element-text {
  padding:                  0 6px;
  cursor:                   inherit;
  background-color:         inherit;
  text-color:               inherit;
}
